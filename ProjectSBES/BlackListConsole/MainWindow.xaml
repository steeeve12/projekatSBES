<Window x:Class="BlackListConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:BlackListConsole.View"
        xmlns:local="clr-namespace:BlackListConsole"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="584.303">
    
    <Window.Background>
        <ImageBrush>
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="/BlackListConsole;component/images/blue-gradient-abstract-hd-wallpaper-1920x1200-44301.jpg"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <view:MainWindowView
			Grid.Row="0"
			Grid.Column="0"
            x:Name="MainWindowView"
			HorizontalAlignment="Center" Loaded="MainWindowView_Loaded" Margin="10,0,-17,-37" Width="583"/>
    </Grid>
    
</Window>
